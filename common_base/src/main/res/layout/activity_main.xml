<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/fl_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></FrameLayout>

        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis_35"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_main"
                style="@style/home_main_viewgroup"
                android:text="@string/home_main"/>
            <View
                android:layout_width="@dimen/dis_1"
                android:layout_height="match_parent"/>

            <RadioButton
                android:id="@+id/rb_vedio"
                style="@style/home_main_viewgroup"
                android:text="@string/home_vadio"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_friend"
                style="@style/home_main_viewgroup"
                android:text="@string/home_vadio" />
            <View
                android:layout_width="@dimen/dis_1"
                android:layout_height="match_parent"/>

            <RadioButton
                android:id="@+id/rb_me"
                style="@style/home_main_viewgroup"
                android:text="@string/home_my" />

        </RadioGroup>
    </LinearLayout>

</RelativeLayout>